@using OnlineStore.Models.Concrete
@model List<Product>

<div class="product-container">
    @foreach (var product in Model)
    {
        <div class="product-box">
            <a asp-controller="Home" asp-action="ProductDetail" asp-route-id="@product.Id">
            <h3 >@product.ProductName</h3>
            <img src="@product.ImageUrl" alt="@product.ProductName" class="product-image" style="width:180px; height:240px;">
                <p class="product-description">@TruncateString(product.Description, 50)</p>
                <p class="product-price">@product.UnitPrice</p>
               
            </a>
        </div>
    }
</div>

<style>
    .product-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Kutular arası boşluk */
    }

    .product-box {
        border: 1px solid #ccc;
        border-radius: 7px;
        padding: 20px;
        width: 200px; /* Kutu genişliği */
        background-color: #FFFFFF;
        /* İhtiyaca göre diğer stil özellikleri */
    }

    .product-image {
        max-width: 100%; /* Resim maksimum genişliği */
        border-radius: 7px;
        border: 1px;
        height: auto; /* Otomatik yükseklik */
        /* Diğer stil özellikleri */
    }

    .product-description {
        color: #888; /* Gri renk */
        text-decoration: none;
        /* İhtiyaca göre diğer stil özellikleri */
    }

    .product-price {
        color: orange; /* Turuncu renk */
        font-weight: bold; /* Kalın yazı */
        bottom: 2px;
        text-align: center;
        /* İhtiyaca göre diğer stil özellikleri */
    }

    .product-name {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1; /* Resmin üzerine çıkması için */
        text-decoration: none;
        /* İhtiyaca göre diğer stil özellikleri */
    }

    

</style>

@functions {
    public string TruncateString(string value, int maxLength)
    {
        if (value.Length > maxLength)
        {
            return value.Substring(0, maxLength) + "...";
        }
        return value;
    }
}

