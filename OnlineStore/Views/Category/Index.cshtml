@using OnlineStore.Models.Entities
@model List<Category>


@*Temp data yapısı ile controller ve view arasında veri taşınır.*@
    <div class="container">
        <div class="row pt-3 pb-4">
        <h1>Categories</h1>
        </div>
    </div>
<div>
    @if (TempData["Success"] != null)
    {
        <div>
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Well done!</strong> @TempData["Success"]
            </div>
        </div>
    }
    <div class="row pt-3 pb-2">

        <a asp-controller="Category" asp-action="Add" type="button" class="btn btn-primary col-md-5">
            Add New Category
        </a>
    </div>
<table class ="table table-bordered">
    <thead >
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Description</th>
            <th style="width:150px"></th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                    <td><a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" type="button"
                        class="btn btn-info rounded" style="width:150px"><i class="fa fa-cog" aria-hidden="true"></i> Update</a></td>

                    <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" type="button"
                        class="btn btn-danger rounded" style="width:150px"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a></td>
            </tr>
        }
        
    </tbody>
</table>

        


</div>
