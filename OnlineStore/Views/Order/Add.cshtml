@using OnlineStore.Models.Concrete
@model Order

<form method="post">
    @*<input asp-for="Id" hidden />*@
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Add Order</h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="CustomerId" class="p-0"></label>
            <input asp-for="CustomerId" class="form-control" />
            <span asp-validation-for="CustomerId" class="text-primary"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OrderDate" class="p-0"></label>
            <input asp-for="OrderDate" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-primary"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ShipCity" class="p-0"></label>
            <input asp-for="ShipCity" class="form-control" />
            <span asp-validation-for="ShipCity" class="text-primary"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:250px">Add</button>

        <a asp-controller="Order" asp-action="Index" class="btn btn-primary" style="width:250px">Back</a>

    </div>

</form>

