@using OnlineStore.Models.ViewModels
@model List<UserOrderViewModel>



    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br />
                <h2>Sipariş Bilgileriniz</h2>
                <br />
            @if (Model.Count > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Sipariş Numarası</th>
                            <th>Sipariş Tarihi</th>
                            <th>Toplam Tutar</th>
                            <th>Sipariş Durumu</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    @order.OrderNumber
                                </td>
                                <td>
                                    @order.OrderDate.ToShortDateString()
                                </td>
                                <td>
                                    @order.Total.ToString("c")
                                </td>
                                <td>
                                    @order.OrderState
                                </td>
                                <td>
                                    <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.Id"
                                       class="btn btn-xs btn-outline btn-primary rounded" style="width:150px">
                                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                        Sipariş Detayı</a>
                                </td>
                                
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-dismissible alert-warning">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <p class="mb-0"><i class="fa fa-exclamation-circle" aria-hidden="true"></i>Siparişiniz bulunmamaktadır.</p>
                </div>
            }
            </div>
        </div>
    </div>



