@using OnlineStore.Models.Concrete
@model List<Order>


@*Temp data yapısı ile controller ve view arasında veri taşınır.*@
    <div class="container">
        <div class="row pt-3 pb-4">
        <h1>Orders</h1>
        </div>
    </div>
    <div>
<table class ="table table-bordered">
    <thead >
        <tr>
            <th>Id</th>
            <th>Customer Id</th>
            <th>Order Date</th>
            <th>Ship City</th>
            <th style="width:150px"></th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model)
        {
            <tr>
                    <td>@order.Id</td>
                    <td>@order.CustomerId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.ShipCity</td>
                    <td><a asp-controller="Order" asp-action="Update" asp-route-id="@order.Id" type="button" class="btn btn-info" style="width:150px">Update</a></td>
                    <td><a asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" type="button" class="btn btn-danger" style="width:150px">Delete</a></td>
            </tr>
        }
        
    </tbody>
</table>

         @if (TempData["Success"] != null)
        {
        <div>
        <h4 class="text-info">@TempData["Success"]</h4>
        </div>
        }
        <div class="row pt-3 pb-2">
            
        <a asp-controller="Order" asp-action="Add" type="button" class="btn btn-primary col-md-5">
            Add New Order
        </a>
        </div>


</div>
